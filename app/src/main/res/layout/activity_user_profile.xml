<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground"
    android:orientation="vertical"
    tools:context=".UserProfile">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/person200"
        android:layout_gravity="center_horizontal"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:padding="5dp"
        android:background="@drawable/background2"
        android:layout_margin="10dp"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          android:textColor="@color/colorAccent"
          android:id="@+id/name"
          android:textSize="15sp"
          android:text="Name :"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/colorAccent"
            android:id="@+id/accountnumber"
            android:text="Account No. :"
            android:textSize="15sp"
            android:layout_below="@+id/name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_below="@id/accountnumber"
            android:text="Email :"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:id="@+id/email2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Balance :"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:id="@+id/accountbalance"
            android:layout_below="@id/email2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="prashant kumar"
            android:textColor="@color/colorAccent"
            android:layout_toEndOf="@id/name"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:id="@+id/name1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1816548255"
            android:layout_below="@+id/name1"
            android:layout_toEndOf="@id/accountnumber"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:id="@+id/name2"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="prashantkumarjnv6@gmail.com"
            android:layout_below="@+id/name2"
            android:textColor="@color/colorAccent"
            android:layout_toEndOf="@id/email2"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:id="@+id/name3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5000"
            android:layout_below="@+id/name3"
            android:layout_toEndOf="@id/accountbalance"
           android:layout_marginLeft="50dp"
            android:layout_margin="10dp"
            android:textColor="@color/colorblue"
            android:textSize="16sp"
            android:id="@+id/name4"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INR"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:layout_below="@+id/email2"
            android:layout_toEndOf="@id/name4"
            android:gravity="center"
            android:textSize="16sp"
            android:id="@+id/name5"
            />



    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:textColor="@color/colorwhite"
        android:id="@+id/moneytransfer"
        android:background="@drawable/button"
        android:text="Transfer Money"/>


</LinearLayout>